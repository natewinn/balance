= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.label :email_verified
    = f.text_field :email_verified
  .field
    = f.label :subscription
    = f.text_field :subscription
  .field
    = f.label :currency
    = f.text_field :currency
  .field
    = f.label :account_id
    = f.text_field :account_id
  .actions
    = f.submit 'Save'
